<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="com.wessam.rememberme"
    android:targetSandboxVersion="2"
    android:versionCode="1"
    android:versionName="1.0" >

    <uses-sdk
        android:minSdkVersion="19"
        android:targetSdkVersion="28" />

    <uses-permission android:name="android.permission.READ_CONTACTS" />
    <uses-permission android:name="android.permission.SET_ALARM" />
    <uses-permission android:name="android.permission.CALL_PHONE" />

    <application
        android:allowBackup="true"
        android:appComponentFactory="androidx.core.app.CoreComponentFactory"
        android:debuggable="true"
        android:icon="@mipmap/ic_launcher"
        android:label="@string/app_name"
        android:roundIcon="@mipmap/ic_launcher_round"
        android:supportsRtl="true"
        android:testOnly="true"
        android:theme="@style/AppTheme" >
        <activity android:name="com.wessam.rememberme.ui.addperson.AddPersonActivity" />
        <activity android:name="com.wessam.rememberme.ui.settings.SettingsActivity" />
        <activity android:name="com.wessam.rememberme.ui.login.LoginActivity" />
        <activity android:name="com.wessam.rememberme.ui.splash.SplashActivity" >
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
        <activity android:name="com.wessam.rememberme.ui.main.MainActivity" />
        <activity android:name="com.wessam.rememberme.ui.main.ResultActivity" />

        <receiver
            android:name="com.wessam.rememberme.receiver.NotificationReceiver"
            android:exported="false" >
            <intent-filter>
                <action android:name="com.wessam.rememberme.ALARM" />
            </intent-filter>
        </receiver>
    </application>

</manifest>